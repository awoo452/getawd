<section class="featured-about" style="border-radius: 0; padding: 2rem; border-top: 3px solid #3a579d; border-bottom-right-radius: 8px; border-bottom-left-radius: 8px;">
  <h2 style="font-size: 1.5rem!important;">
    <%= @about_app_level %>
  </h2>
  <h3>
    <%= @about_sub_app_level %>
  </h3>
</section>

<section class="featured-projects">
  <h2>Featured Projects</h2>
  <ul>
    <% @featured_projects.each do |project| %>
      <li>
        <h3><%= project.title %></h3>
        <p><%= project.description %></p>
        <%= image_tag(project_image_url(project.image)) if project.image.present? %>
        <div>
          <a href="<%= project.url %>">View Project</a>
        </div>
        </li>
    <% end %>
  </ul>
</section>

<section class="featured-blog-posts">
  <h2>Featured Blog Posts</h2>
  <ul>
    <% @featured_blog_posts.each do |blog_post| %>
      <li>
        <h3><%= blog_post.title %></h3>
        <p><%= blog_post.description %></p>
        <%= image_tag(blog_image_url(blog_post.image)) %>
        <div>
        <%= link_to 'Read More', blog_post_path(blog_post) %>
        </div>
      </li>
    <% end %>
  </ul>
</section>

<section class="featured-videos">
  <h2>Featured Videos</h2>
  <ul>
    <% @featured_videos.each do |video| %>
      <li>
        <h3><%= video.title %></h3>
        <p><%= video.description %></p>
        <iframe src='https://www.youtube.com/embed/<%= video.youtube_id %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>' frameborder='0' allowfullscreen></iframe>
      </li>
    <% end %>
  </ul>
</section>