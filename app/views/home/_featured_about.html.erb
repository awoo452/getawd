<section class="featured-about">
  <% fallback_image = image_path("branding/lightning.png") %>
  <% lightning_key = "branding/lightning1_24_11.png" %>
  <% proxy_url = image_proxy_url(lightning_key, width: 1600, height: 900, fit: "cover", format: "webp") %>
  <% hero_image = s3_object_exists?(lightning_key) ? proxy_url : fallback_image %>
  <%= image_tag(hero_image,
                class: "featured-about-bg",
                loading: "lazy",
                decoding: "async") %>

  <div class="featured-about-text">
    <div class="featured-about-flag" aria-hidden="true"></div>
    <p class="featured-about-kicker">Rails-First Development | AWS-Ready Infrastructure | IT Consulting</p>
    <div class="featured-about-badges">
      <span class="featured-about-badge">Rails-first</span>
      <span class="featured-about-badge">Built to last</span>
      <span class="featured-about-badge">Operationally boring</span>
    </div>
    <h2 class="featured-about-title">Build it once. Run it for years.</h2>
    <p class="featured-about-copy">
      Custom web apps, APIs, and internal tools with a boring, reliable stack. Fast delivery, secure deploys, and pragmatic scaling since 2020.
    </p>
    <div class="featured-about-actions">
      <%= link_to "View Services", services_path, class: "featured-about-action primary" %>
      <%= link_to "Start a Project", contact_path, class: "featured-about-action ghost" %>
    </div>
  </div>
</section>
