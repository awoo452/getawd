<section class="featured-projects">
  <h2>Featured Projects</h2>
  <ul>
    <% featured_projects.each do |project| %>
      <li>
        <h3><%= project.title %></h3>
        <p><%= project.description %></p>
        <% if project.image.present? %>
          <div class="card-image-frame">
            <% proxy_url = image_proxy_url(project_image_key(project.image), width: 500, height: 500, fit: "inside", format: "webp") %>
            <%= fallback_image_tag(proxy_url, class: "card-image", loading: "lazy", decoding: "async") if proxy_url %>
          </div>
        <% end %>
        <div>
          <% if project.url.present? %>
            <a href="<%= project_link_url(project.url) %>">View Project</a>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</section>
