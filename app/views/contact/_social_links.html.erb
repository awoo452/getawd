<% social = contact_info.fetch("social_media", {}) %>

<h3>Stay Connected</h3>
<p class="contact-panel-intro">
  Follow along for updates, releases, and behind-the-scenes notes.
</p>

<ul class="social-links">
  <% if social["instagram"].present? %>
    <li>
      <a href="<%= social["instagram"] %>" target="_blank" rel="noopener noreferrer">
        <span class="social-icon" aria-hidden="true">
          <svg viewBox="0 0 24 24" role="img" focusable="false">
            <rect x="3" y="3" width="18" height="18" rx="5" ry="5" fill="none" stroke="currentColor" stroke-width="2"/>
            <circle cx="12" cy="12" r="4" fill="none" stroke="currentColor" stroke-width="2"/>
            <circle cx="17" cy="7" r="1.5" fill="currentColor"/>
          </svg>
        </span>
        <span>Instagram</span>
      </a>
    </li>
  <% end %>
  <% if social["linkedin"].present? %>
    <li>
      <a href="<%= social["linkedin"] %>" target="_blank" rel="noopener noreferrer">
        <span class="social-icon" aria-hidden="true">
          <svg viewBox="0 0 24 24" role="img" focusable="false">
            <rect x="3" y="3" width="18" height="18" rx="3" ry="3" fill="none" stroke="currentColor" stroke-width="2"/>
            <circle cx="8.5" cy="9" r="1.5" fill="currentColor"/>
            <rect x="7" y="12" width="3" height="6" fill="currentColor"/>
            <rect x="12" y="11.5" width="3" height="6.5" fill="currentColor"/>
            <rect x="15.5" y="11.5" width="2.5" height="6.5" fill="currentColor"/>
          </svg>
        </span>
        <span>LinkedIn</span>
      </a>
    </li>
  <% end %>
  <% if social["youtube"].present? %>
    <li>
      <a href="<%= social["youtube"] %>" target="_blank" rel="noopener noreferrer">
        <span class="social-icon" aria-hidden="true">
          <svg viewBox="0 0 24 24" role="img" focusable="false">
            <rect x="3" y="6" width="18" height="12" rx="3" ry="3" fill="none" stroke="currentColor" stroke-width="2"/>
            <polygon points="10,9 16,12 10,15" fill="currentColor"/>
          </svg>
        </span>
        <span>YouTube</span>
      </a>
    </li>
  <% end %>
  <% if social["github"].present? %>
    <li>
      <a href="<%= social["github"] %>" target="_blank" rel="noopener noreferrer">
        <span class="social-icon" aria-hidden="true">
          <svg viewBox="0 0 24 24" role="img" focusable="false">
            <circle cx="12" cy="13" r="6" fill="none" stroke="currentColor" stroke-width="2"/>
            <path d="M6 9.5L9 4.5L11.5 9.5" fill="currentColor"/>
            <path d="M12.5 9.5L15 4.5L18 9.5" fill="currentColor"/>
          </svg>
        </span>
        <span>GitHub</span>
      </a>
    </li>
  <% end %>
  <% if social["twitch"].present? %>
    <li>
      <a href="<%= social["twitch"] %>" target="_blank" rel="noopener noreferrer">
        <span class="social-icon" aria-hidden="true">
          <svg viewBox="0 0 24 24" role="img" focusable="false">
            <path d="M5 4h14v10l-4 4h-4l-2 2h-2v-2H5z" fill="none" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
            <rect x="10" y="9" width="2" height="4" fill="currentColor"/>
            <rect x="14" y="9" width="2" height="4" fill="currentColor"/>
          </svg>
        </span>
        <span>Twitch</span>
      </a>
    </li>
  <% end %>
</ul>
