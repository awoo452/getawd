<%= form_with url: contact_path, method: :post, class: "contact-form" do %>
  <div class="form-group">
    <label>Your Name</label>
    <%= text_field_tag :name, nil, required: true %>
  </div>

  <div class="form-group">
    <label>Your Contact Email</label>
    <%= email_field_tag :email, nil, required: true %>
  </div>

  <div class="form-group">
    <label>Description</label>
    <%= text_area_tag :message, nil, required: true %>
  </div>

  <div class="hp">
    <%= text_field_tag :website %>
  </div>

  <%= submit_tag "Send", class: "btn-submit" %>
<% end %>
