<section class="videos">
  <h2>Videos</h2>
  <ul>
    <% @videos.each do |video| %>
      <li>
        <iframe src='https://www.youtube.com/embed/<%= video.youtube_id %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>' frameborder='0' allowfullscreen></iframe>
        <h3><%= video.title %></h3>
        <p><%= video.description %></p>
      </li>
    <% end %>
  </ul>

  <% if @videos_total_pages.to_i > 1 %>
    <nav class="pagination">
      <% if @videos_page > 1 %>
        <%= link_to "Prev", videos_path(page: @videos_page - 1) %>
      <% end %>
      <span>Page <%= @videos_page %> of <%= @videos_total_pages %></span>
      <% if @videos_page < @videos_total_pages %>
        <%= link_to "Next", videos_path(page: @videos_page + 1) %>
      <% end %>
    </nav>
  <% end %>
</section>
