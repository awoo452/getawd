<section class="services">
  <div class="section-intro">
    <p class="section-kicker">Offerings</p>
    <h2 class="page-title">Services</h2>
    <p class="page-intro">
      Clear scopes, reliable delivery, and long-term support for the work that matters.
    </p>
  </div>

  <% if @featured_services.any? %>
    <div class="services-group">
      <div class="services-section-header">
        <p class="services-section-kicker">Featured</p>
        <h3 class="services-section-title">Standard Packages</h3>
        <p class="services-section-summary">
          Featured Services are the standardized packages we currently offer.
        </p>
      </div>
      <%= render "service_list", services: @featured_services %>
    </div>
  <% end %>

  <% if @other_services.any? %>
    <div class="services-group">
      <div class="services-section-header">
        <p class="services-section-kicker">Also Ask About</p>
        <h3 class="services-section-title">Build-to-Suit Work</h3>
        <p class="services-section-summary">
          Related Services are non-standardized 'build to suit' type projects we can contribute to.
        </p>
      </div>
      <%= render "service_list", services: @other_services, show_projects: false %>
    </div>
  <% end %>

  <%= render "shared/pagination",
        page: @services_page,
        total_pages: @services_total_pages,
        path_helper: :services_path %>
</section>
