<section id="projects">
  <h2>Projects</h2>
  <ul>
  <% @projects.each do |project| %>
    <li>
      <h3><%= project.title %></h3>
      <p><%= project.description %></p>
      <%= image_tag project.image if project.image.present? %>
      <div>
        <a href="<%= project.url %>">View Project</a>
      </div>
    </li>
  <% end %>
</ul>
</section>