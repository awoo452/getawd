<%= form_with(model: goal, local: true, html: { class: 'goal_form' }) do |form| %>
  <% if goal.errors.any? %>
    <div class="error-explanation">
      <h2><%= pluralize(goal.errors.count, "error") %> prohibited this goal from being saved:</h2>
      <ul>
        <% goal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-field">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-input' %>
  </div>

  <div class="form-field-large">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-input' %>
  </div>

  <%= render "shared/smart_fields", form: form %>
  
  <div class="field">
    <%= form.label :recurring, "Recurring (auto-create daily tasks)" %>
    <%= form.check_box :recurring %>
  </div>
  
  <div class="form-field">
    <%= form.label :due_date %>
    <%= form.date_field :due_date, class: 'form-input' %>
  </div>
  
  <div class="form-field">
    <%= form.label :priority %>
    <%= form.number_field :priority, class: 'form-input' %>
  </div>

  <div class="form-field">
    <%= form.label :category %>
    <%= form.select :category, 
                    GOAL_ICONS.map { |category, icon| ["#{icon} #{category.humanize}", category] }, 
                    {}, 
                    { class: 'form-input' } %>
  </div>
    <div class="form-field">
    <%= form.label :idea_id, "Idea" %>
    <%= form.collection_select :idea_id, Idea.all.order(:title), :id, :title, {}, { class: 'form-input' } %>
  </div>

  <div class="form-field">
    <%= form.label :status %>
    <%= form.select :status, 
                    Goal.statuses.keys.map { |status| [status.humanize, status] }, 
                    { include_blank: false, class: 'form-input' } %>
  </div>


  <div class="form-field">
    <%= form.label :hold_until, "Reopen Date (On Hold Goals Only)" %>
    <%= form.datetime_local_field :hold_until, class: "form-input" %>
  </div>
  
  <div class="form-field">
    <%= form.label :completed_at %>
    <%= form.datetime_local_field :completed_at, class: 'form-input' %>
  </div>

  <div class="form-actions">
    <%= form.submit 'Save Goal', class: 'form-submit' %>
  </div>
<% end %>