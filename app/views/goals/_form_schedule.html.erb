<div class="field">
  <%= form.label :recurring, "Recurring (auto-create daily tasks)" %>
  <%= form.check_box :recurring %>
</div>

<div class="form-field">
  <%= form.label :due_date %>
  <%= form.date_field :due_date, class: "form-input" %>
</div>

<div class="form-field">
  <%= form.label :priority, "Priority (1-5)" %>
  <%= form.number_field :priority, class: "form-input", min: 1, max: 5, step: 1 %>
</div>
