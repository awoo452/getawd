<div class="form-field">
  <%= form.label :status %>
  <%= form.select :status,
                  Task.statuses.keys.map { |status| [status.humanize, status] },
                  { include_blank: false, class: "form-input" } %>
</div>

<div class="form-field">
  <%= form.label :hold_until, "Reopen Date (On Hold Tasks Only)" %>
  <%= form.datetime_local_field :hold_until, class: "form-input" %>
</div>

<div class="form-field">
  <%= form.label :priority, "Priority (1-5)" %>
  <%= form.number_field :priority, class: "form-input", min: 1, max: 5, step: 1 %>
</div>
