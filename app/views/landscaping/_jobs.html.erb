<div class="jobs-grid">
  <% jobs.each do |job| %>
    <div class="job-card">
      <h2><%= job.title %></h2>
      <p><%= job.description %></p>
      <% if job.image.present? %>
        <div class="job-image-frame">
          <%= image_tag(landscaping_image_url(job.image), class: "job-image") %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
