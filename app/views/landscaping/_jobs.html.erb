<div class="jobs-grid">
  <% jobs.each do |job| %>
    <div class="job-card">
      <h2><%= job.title %></h2>
      <p><%= job.description %></p>
      <% if job.image.present? %>
        <div class="job-image-frame">
          <% proxy_url = image_proxy_url(landscaping_image_key(job.image), width: 500, height: 500, fit: "inside", format: "webp") %>
          <%= image_tag(proxy_url, class: "job-image", loading: "lazy", decoding: "async") if proxy_url %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
