<div class="landscaping-jobs">
  <h1>AW Lawn & Landscape</h1>

  <div class="jobs-grid">
    <% @LandscapingJobs.each do |job| %>
      <div class="job-card">
        <h2><%= job.title %></h2>
        <p><%= job.description %></p>
        <%= image_tag asset_path(job.image), class: "job-image" if job.image.present? %>
      </div>
    <% end %>
  </div>
</div>