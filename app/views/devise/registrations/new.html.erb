<div class="auth-page">
  <div class="auth-card">
    <h1 class="auth-title">Create account</h1>
    <p class="auth-subtitle">Join in a few seconds</p>

    <% if resource.errors.any? %>
      <div class="auth-errors">
        <strong><%= pluralize(resource.errors.count, "error") %> prevented sign up:</strong>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, class: "auth-form" do |f| %>
      <div class="auth-field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="auth-field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="auth-field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="auth-actions">
        <%= f.submit "Create account" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= link_to "Already have an account? Sign in", new_session_path(resource_name) %>
    </div>
  </div>
</div>
