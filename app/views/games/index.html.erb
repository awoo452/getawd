<section class="games">
  <h2>Gaming Highlights</h2>
  <h3>Some of our favorite video game highlights, how-tos, and other happenings with the games we play.</h3>
  <ul>

    <% @games.each do |game| %>
    <% if game.show_to_public? %>
      <li>
        <h2><%= game.game_name %></h2>
        <% if game.game_image.present? %>
          <div>
            <%= image_tag(game_image_url(game, game.game_image), alt: game.game_name) %>
          </div>
        <% end %>
        <div><%= link_to 'See More', game_path(game) %></div>
      </li>
    <% end %>
    <% end %>
  </ul>
</section>