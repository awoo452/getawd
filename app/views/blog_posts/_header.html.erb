<% if blog_post.image.present? %>
  <div class="img">
    <% proxy_url = image_proxy_url(blog_post_image_key(blog_post.image), width: 1400, height: 1000, fit: "inside", format: "webp") %>
    <%= image_tag proxy_url, loading: "lazy", decoding: "async" if proxy_url %>
  </div>
<% end %>

<div class="title">
  <h1 class="page-title"><%= blog_post.title %></h1>
</div>

<% if blog_post.description.present? %>
  <div class="description">
    <p><%= blog_post.description %></p>
  </div>
<% end %>
