<section class="blog-posts">
  <div class="blog-posts-intro">
    <p class="blog-posts-kicker">Updates &amp; Notes</p>
    <h2 class="page-title">Blog Posts</h2>
    <p class="page-intro">
      Long-form updates, build notes, and project spotlights from recent work.
    </p>
  </div>
  <%= render "blog_post_list", blog_posts: @blog_posts %>
  <%= render "shared/pagination",
        page: @blog_posts_page,
        total_pages: @blog_posts_total_pages,
        path_helper: :blog_posts_path %>
</section>
